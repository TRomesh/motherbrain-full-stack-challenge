{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "sourceMap": true,
    "lib": ["es2022"],
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "isolatedModules": true,
    "types": ["node", "jest"] // Explicitly include express if it's not being picked up
  },
  "include": [
    "src/**/*",
    "global.d.ts" // Make sure this is included if it's not within 'src/'
  ]
}
